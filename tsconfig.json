{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/page.tsx",
    "app/components/ParallaxScroll.jsx",
    "components/navbar/Body.jsx",
    "components/navbar/NavBar.tsx",
    "components/sidebar/Link.jsx",
    "components/MottoText.tsx",
    "utils/useMousePosition.ts",
    "components/news/Card.jsx",
    "components/news/News.tsx",
    "utils/data.js",
    "components/about/Description.tsx",
    "components/about/About.tsx",
    "components/about/Projects.tsx",
    "components/about/Intro.tsx",
    "components/products/Descriptions.jsx",
    "components/products/Products.tsx",
    "components/products/Transition.jsx",
    "components/news/PlainCard.jsx",
    "components/getChars.jsx",
    "components/articles/Heading.jsx",
    "components/RichText.jsx",
    "app/[uid]/page.jsx",
    "lib/findFirstImage.js",
    "lib/getExcerpt.js",
    "app/(pages)/articles/[uid]/page.jsx",
    "slices/Quote/index.jsx",
    "slices/Image/index.jsx",
    "slices/Text/index.jsx",
    "slices/index.ts",
    "app/slice-simulator/page.tsx"
  ],
  "exclude": ["node_modules"]
}
