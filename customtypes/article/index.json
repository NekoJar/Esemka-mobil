{
  "id": "article",
  "label": "Article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "URL slug for the article"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title of the article",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Date the article was published"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 600,
            "height": 480
          },
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "contact_form": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          },
          "thumbnails": []
        }
      }
    }
  }
}
